<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextGrayDivider">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/section_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/list_section_divider_holo_custom</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="CardInfo" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff91a7a7</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ConversationControlButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/flat_button_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/conversation_control_button_width</item>
        <item name="android:layout_height">40.0sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ConversationDate" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/conversation_row_date</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="DateDivider">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:background">@drawable/date_balloon</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/conversation_date_divider_marginbottom</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="RedButton">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="UndoBarButtonClassic" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">#ffffab00</item>
        <item name="android:background">@drawable/undobar_button</item>
        <item name="android:paddingLeft">24.0dip</item>
        <item name="android:paddingRight">24.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:text">@string/undo</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
